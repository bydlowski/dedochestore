<h4 class="column">Dedoches</h4>
<div class="column">
  <ul class="movies-grid no-bullet row">
    <% @dedoches.each do |dedoche| %>
      <li class="large-3 medium-4 small-12 column">
        <div class="movie-card padly">
          <%= link_to dedoche_path(dedoche.id), class: "poster" do %>
            <%= image_tag dedoche.image %>
          <% end %>
          <div class="movie-info ell glassy-bg padmy padlx">
            <div class="title">
              <h6><%= dedoche.name %> <span>(<%= dedoche.stock %>)</span></h6>
            </div>
            <p class="left price label movie-label radius">$ <%= dedoche.price %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>