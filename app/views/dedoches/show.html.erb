<div class="large-3 small-12 column">
  <%=image_tag @dedoche.image %>
</div>

<div class="large-9 small-12 column">
  <h3>
    <%= @dedoche.name %>
    (<%= @dedoche.stock %>)
  </h3>
  <p class="label movie-label radius mb1">$ <%= @dedoche.price %></p>

  <p><%= @dedoche.description %></p>
</div>

<%if signed_in?%>
  <%=link_to "", class: "button", data: {target: @cart_action, addUrl: add_to_cart_path(@dedoche), removeUrl: remove_from_cart_path(@dedoche)} do%>
    <i class="fi-shopping-cart"></i>
    <span><%=@cart_action%></span> Cart
  <%end%>
<%end%>

<%= link_to 'Back', dedoches_path %>
